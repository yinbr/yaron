<?xml version='1.0' encoding='UTF-8'?>
<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
	version="2.0">
	
	<application>
		<el-resolver>org.springframework.web.jsf.el.SpringBeanFacesELResolver</el-resolver>
	</application> 
	    
	<navigation-rule>
		<navigation-case>
			<from-outcome>showTestPage</from-outcome>
			<to-view-id>/pages/test.xhtml</to-view-id>
			<redirect/>
		</navigation-case>
	</navigation-rule>
	
	<navigation-rule>
		<navigation-case>
			<from-outcome>showLoginPage</from-outcome>
			<to-view-id>/pages/login.xhtml</to-view-id>
			<redirect/>
		</navigation-case>
	</navigation-rule>
	
	<navigation-rule>
		<navigation-case>
			<from-outcome>showUserPage</from-outcome>
			<to-view-id>/pages/userHome.xhtml</to-view-id>
			<redirect/>
		</navigation-case>
	</navigation-rule>
	
	<navigation-rule>
		<navigation-case>
			<from-outcome>showAdminPage</from-outcome>
			<to-view-id>/pages/adminHome.xhtml</to-view-id>
			<redirect/>
		</navigation-case>
	</navigation-rule>

	<navigation-rule>
		<navigation-case>
			<from-outcome>showApplicationListPage</from-outcome>
			<to-view-id>/pages/applicationList.xhtml</to-view-id>
			<redirect/>
		</navigation-case>
	</navigation-rule>

	<navigation-rule>
		<navigation-case>
			<from-outcome>showApplicationsDetailsPage</from-outcome>
			<to-view-id>/pages/applicationDetails.xhtml</to-view-id>
			<redirect/>
		</navigation-case>
	</navigation-rule>

    <lifecycle>
        <phase-listener>com.yaron.utils.LifeCycleListener</phase-listener>
    </lifecycle>



    <converter>
        <converter-id>myConverter</converter-id>
        <converter-class>com.yaron.utils.MyConverter</converter-class>
    </converter>
    <validator>
        <validator-id>myValidator</validator-id>
        <validator-class>com.yaron.utils.MyValidator</validator-class>
    </validator>
    <!--<managed-bean>-->
        <!--<managed-bean-name>myBean</managed-bean-name>-->
        <!--<managed-bean-class>com.yaron.actions.MyBean</managed-bean-class>-->
        <!--<managed-bean-scope>session</managed-bean-scope>-->
    <!--</managed-bean>-->


</faces-config>